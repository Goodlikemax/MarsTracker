<!DOCTYPE html>
<html>
<head>
  <title>MarsTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <div class="navbar-brand">
          <%= image_tag("logo.png", :id => "logo-small") %>
        </div>
        <li class="<%= 'active' if params[:page] == 'tracker' %>"><%= link_to 'MARS Tracker', static_page_url('tracker') %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= 'active' if params[:controller] == 'news' %>"><%= link_to 'Новости', { controller: :news, action: :index }, id: "news-link" %></li>
        <li class="<%= 'active' if params[:controller] == 'articles' %>"><%= link_to 'Cтатьи', { controller: :articles }, id: "articles-link" %></li>
        <li class="<%= 'active' if params[:controller] == 'users' %>"><%= link_to 'Регистрация', { controller: :users, action: :new }, id: "registration-link" %></li>
      </ul>
    </div>
  </div>
</nav>
<div id="main-container" class="container">
  <%= yield %>
</div>


</body>
</html>
