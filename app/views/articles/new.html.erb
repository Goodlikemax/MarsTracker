<div class="jumbotron">
  <div class="row">
    <h1>Новая стаття</h1>
    <%= form_for :article, url: articles_path do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :text %><br>
          <%= f.text_area :text %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
    <%= link_to 'Назад', articles_path %>
  </div>

</div>