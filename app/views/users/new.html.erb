<div class="jumbotron">
  <div class="row">
    <h1>Регистрация</h1>
    <%= form_for :user, url: users_path do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </p>

        <p>
          <%= f.label :password %><br>
          <%= f.text_field :password %>
        </p>

        <p>
          <%= f.label :password_confirmation %><br>
          <%= f.text_field :password_confirmation %>
        </p>

        <p>
          <%= f.submit %>
        </p>
    <% end %>
  </div>

</div>